# Enhanced Polygon Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Network Type: "amoy" for testnet, "polygon" for mainnet
POLYGON_NETWORK=amoy

# Primary RPC URL
POLYGON_RPC_URL=https://rpc-amoy.polygon.technology

# Fallback RPC URLs (comma-separated, optional)
POLYGON_FALLBACK_RPCS=https://polygon-amoy.drpc.org,https://rpc.ankr.com/polygon_amoy

# Chain ID (80002 for Amoy testnet, 137 for Polygon mainnet)
POLYGON_CHAIN_ID=80002

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Private key for transaction signing (64 hex characters without 0x prefix)
POLYGON_PRIVATE_KEY=1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
# WARNING: Never commit your actual private key to version control!
# Use a testnet wallet with test MATIC only

# Wallet address (optional - will be derived from private key if not provided)
POLYGON_WALLET_ADDRESS=0x1234567890123456789012345678901234567890

# =============================================================================
# SMART CONTRACT CONFIGURATION
# =============================================================================

# Deployed Notary contract address
NOTARY_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
# This will be populated after contract deployment

# Path to contract ABI file (optional)
CONTRACT_ABI_PATH=blockchain/contracts/Notary.json

# =============================================================================
# GAS CONFIGURATION
# =============================================================================

# Gas limit for transactions
POLYGON_GAS_LIMIT=500000

# Gas price in Gwei
POLYGON_GAS_PRICE_GWEI=30

# Maximum gas price in Gwei (safety limit)
POLYGON_MAX_GAS_PRICE_GWEI=100

# Gas estimation multiplier (1.2 = 20% buffer)
POLYGON_GAS_MULTIPLIER=1.2

# =============================================================================
# TRANSACTION CONFIGURATION
# =============================================================================

# Maximum number of retry attempts for failed transactions
POLYGON_MAX_RETRIES=3

# Delay between retry attempts (seconds)
POLYGON_RETRY_DELAY=2.0

# Number of confirmation blocks to wait
POLYGON_CONFIRMATION_BLOCKS=1

# Transaction timeout (seconds)
POLYGON_TIMEOUT_SECONDS=120

# Nonce management strategy: "auto" or "manual"
POLYGON_NONCE_STRATEGY=auto

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Enable transaction monitoring
POLYGON_ENABLE_MONITORING=true

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
POLYGON_LOG_LEVEL=INFO

# Enable metrics collection
POLYGON_METRICS_ENABLED=false

# =============================================================================
# LEGACY SETTINGS (for backward compatibility)
# =============================================================================

# These are maintained for compatibility with existing code
CHAIN_ID=80002
RPC_URL=https://rpc-amoy.polygon.technology
PRIVATE_KEY=1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
GAS_LIMIT=500000
GAS_PRICE_GWEI=30
MAX_RETRIES=3
TIMEOUT_SECONDS=120

# =============================================================================
# ADDITIONAL SERVICES (if needed)
# =============================================================================

# IPFS Configuration (for document storage)
IPFS_TOKEN=your_ipfs_token_here
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# Development Settings
DEBUG_BLOCKCHAIN=true